<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.subhamdhakal.eavesdrop">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MusicMatch"
        android:theme="@style/AppTheme"
        android:roundIcon="@drawable/music_match_text"
        android:supportsRtl="true"
        >
        <activity android:name=".ui.activity.activity_first">

        </activity>
        <activity android:name=".ui.activity.MainActivity" />
        <activity android:name=".ui.activity.fetchsong" />
        <activity
            android:name=".ui.activity.LoginActivity"
            android:label="@string/title_activity_login"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>